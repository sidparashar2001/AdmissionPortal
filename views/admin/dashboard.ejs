<section style="margin-bottom: 4%;" class="login-wrap mtb-40 ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md">
                <div class="login-box" style="margin-top: 7%;">
                    <h1>Displaying Registrations</h1><hr>
                    <% var i=1 %>
                    <table class="table table-hover">
                        <thead>
                          <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Course Name</th>
                            <th scope="col">E-mail</th>
                           
                            <th scope="col">Status</th>
                            <th scope="col">Comment</th>
                            <th scope="col"></th>
                           
                            <th scope="col">Action</th>
                         
                          </tr>
                        </thead>
                        <tbody>
                            <%  data.forEach((item)=>{ %>       
                             
                          <tr>
                            <th scope="row"><%= i++ %></th>
                            <td><%= item.courses %></td>
                            <td><%= item.email %></td>
                      
                            <% if(item.status==="Accepted") {%>
                            <td><button class="btn btn-success"><%= item.status %></button></td>
                            <%  } else{%>
                              <td><button class="btn btn-danger"><%= item.status %></button></td>
                              <% } %>
                            <!-- Start Form tag from here-->
                            <form action="/admin/update_status/<%= item._id %>" method="POST">

                            
                            <td><textarea name="comment" ></textarea></td>
                            <td>
                              <button name="status" value="Rejected" class="btn btn-danger">Rejected</button>
                              <button name="status" value="Accepted" class="btn btn-success">Accepted</button>
                            </td>
                          </form>
                            
                            <td>
                                <a href="/view_student/<%= item._id %>" class="btn btn-primary btn-sm">View</a>
                                <a href="/admin/edit_student/<%= item._id %>" class="btn btn-info btn-sm">Edit</a>
                                <a href="/delete_student/<%= item._id %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                           
                          </tr>
                     <%   })   %>
                    </tbody>
                  </table>
                  

                    
                </div>         
            </div>
        </div>
    </div>
</section>



